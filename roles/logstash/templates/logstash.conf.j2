input {
  file {
    path => "/logs/docker/*/*-json.log"
    type => docker
    codec => json
  }
  file {
    path => "/logs/mesos/*"
    type => mesos
  }
  file {
    path => "/logs/zookeeper/*"
    type => zookeeper
  }
  syslog {
    port => 1514
    type => syslog
  }
  udp {
    port => 25826
    type => collectd
    codec => collectd
  }
  udp {
    port => 8125
    type => statsd
  }
{% if logstash_input_log4j %}
  log4j {
    mode => "server"
    port => {{ logstash_log4j_port }}
    type => "log4j"
  }
{% endif %}
}

filter {
  if [type] == "docker" {
    json {
      source => "message"
    }
    mutate {
      rename => [ "log", "message" ]
    }
    date {
      match => [ "time", "ISO8601" ]
    }
    grok {
      match => { "path" => "%{GREEDYDATA}/%{GREEDYDATA:container_id}-json.log" }
    }
  }

  if [type] == "syslog" {
    mutate {
      replace => { "host" => "{{ inventory_hostname }}" }
    }
  }
}

output {
{% if logstash_output_elasticsearch is defined %}
  elasticsearch {
  {% for key, val in logstash_output_elasticsearch.iteritems() %}
    {{ key }} => {{ val | to_nice_json }}
  {% endfor %}
  }
{% endif %}
{% if logstash_output_stdout %}
  stdout {
    codec => rubydebug
  }
{% endif %}
}
